<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <add key="globalPackagesFolder" value="..\Dependencies\packages" />
  </config>

  <solution>
    <add key="disableSourceControlIntegration" value="true" />
  </solution>

  <packageRestore>
    <!-- Allow NuGet to download missing packages -->
    <add key="enabled" value="True" />
    <!-- Automatically check for missing packages during build in Visual Studio -->
    <add key="automatic" value="False" />
  </packageRestore>

  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    <add key="NuGet official package source" value="https://nuget.org/api/v2/" />
    <add key="MyGetPublic" value="http://myget.org/F/geckopublic" />
    <add key="MyGetPrivate" value="https://www.myget.org/F/geckoprivate/" />
  </packageSources>

  <packageSourceCredentials>
    <MyGetPrivate>
      <add key="Username" value="ephorteread" />
      <add key="ClearTextPassword" value="ReadingMyGetPackages123" />
    </MyGetPrivate>
  </packageSourceCredentials>
</configuration>